<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.eztalk.ui.auth.welcome.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/activity_welcome">
        <action
            android:id="@+id/action_welcome_to_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_welcome_to_signup"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.eztalk.ui.auth.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/activity_login">
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/mainHostFragment"
            app:popUpTo="@id/nav_graph_main"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_forgot"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.eztalk.ui.auth.signup.SignupFragment"
        android:label="@string/register"
        tools:layout="@layout/activity_register">
        <action
            android:id="@+id/action_signup_to_otp"
            app:destination="@id/otpFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.eztalk.ui.auth.forgot.ForgotPasswordFragment"
        tools:layout="@layout/activity_forgot_password">
        <action
            android:id="@+id/action_forgot_to_otp"
            app:destination="@id/otpFragment" />
    </fragment>

    <fragment
        android:id="@+id/otpFragment"
        android:name="com.eztalk.ui.auth.otp.OtpFragment"
        tools:layout="@layout/activity_otp_verification">
        <argument android:name="email" app:argType="string" />
        <argument android:name="isSignup" app:argType="boolean" android:defaultValue="false" />
    </fragment>

</navigation>