<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_dark"
        app:navigationIcon="@drawable/ic_back"
        app:title="Create Channel"
        app:titleTextColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Channel Icon Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvChannelIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/background_card">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivChannelIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_circle"
                            android:contentDescription="Channel icon" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:contentDescription="Add photo"
                            android:src="@drawable/ic_channel"
                            android:tint="@color/text_hint"
                            tools:ignore="UseAppTint" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Add Channel Icon"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Channel Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/etChannelName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@null"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:hint="Enter channel name"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

            </androidx.cardview.widget.CardView>

            <!-- Channel Description Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/etChannelDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="top|start"
                    android:hint="Enter channel description"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:padding="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,VisualLintTextFieldSize" />

            </androidx.cardview.widget.CardView>

            <!-- Channel Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Type"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText" />

            <RadioGroup
                android:id="@+id/rgChannelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/radioPublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="8dp"
                    tools:ignore="HardcodedText" />

                <RadioButton
                    android:id="@+id/radioPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Private"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="8dp"
                    tools:ignore="HardcodedText" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvChannelTypeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone can find and join this channel"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginBottom="32dp"
                tools:ignore="HardcodedText" />

            <!-- Create Button -->
            <Button
                android:id="@+id/btnCreateChannel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Channel"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/primary_purple"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>