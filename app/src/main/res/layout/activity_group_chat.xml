<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Professional Toolbar with Group Info -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="71dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_gradient_appbar"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_primary"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <!-- Clickable Group Info Section -->
        <LinearLayout
            android:id="@+id/layout_group_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingEnd="56dp"
            android:paddingBottom="8dp"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_group_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@color/primary_purple"
                android:contentDescription="@string/group_icon"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_group"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                app:strokeColor="@color/primary_purple"
                app:strokeWidth="0dp"
                app:tint="@color/text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/group_name_placeholder"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/member_count_placeholder"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <!-- Chevron indicator -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/view_details"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/text_secondary"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_darker"
        android:clipToPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/layout_input"
        tools:listitem="@layout/item_message_sent" />

    <!-- Professional Input Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Attachment Button -->
            <ImageView
                android:id="@+id/btn_attach"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/attach_file"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/ic_attach"
                app:tint="@color/text_secondary" />

            <!-- Message Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/background_darker"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <EditText
                        android:id="@+id/et_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/type_message"
                        android:importantForAutofill="no"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="5"
                        android:minHeight="40dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="15sp"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

                    <!-- Emoji Button -->
                    <ImageView
                        android:id="@+id/btn_emoji"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/emoji"
                        android:focusable="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_emoji"
                        app:tint="@color/text_secondary"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Send Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabCustomSize="48dp"
                android:src="@drawable/ic_send"
                app:tint="@color/text_primary"
                app:backgroundTint="@color/primary_purple"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:contentDescription="@string/send_message" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>