<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_gradient_appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_channel_options"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_primary">

        <LinearLayout
            android:id="@+id/layout_channel_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_channel_avatar"
                android:layout_width="@dimen/avatar_size_medium"
                android:layout_height="@dimen/avatar_size_medium"
                android:background="@color/primary_purple"
                android:contentDescription="@string/channel_avatar"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_channel"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                app:strokeColor="@color/primary_purple"
                app:strokeWidth="2dp"
                app:tint="@color/text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/channel_name"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large" />

                <TextView
                    android:id="@+id/tv_subscriber_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscriber_count"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_caption"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_darker"
        android:clipToPadding="false"
        android:padding="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/layout_input"
        tools:listitem="@layout/item_message_sent" />

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="411dp"
        android:layout_height="86dp"
        android:background="@color/background_card"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btn_emoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/emoji"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_emoji"
            app:tint="@color/text_primary"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_message_input"
            android:hint="@string/type_message"
            android:importantForAutofill="no"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_size_body"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <!-- âœ… FIXED: Smaller send button -->
        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_round"
            android:backgroundTint="@color/primary_purple"
            android:clickable="true"
            android:contentDescription="@string/send"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/ic_send"
            app:tint="@color/text_primary"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>