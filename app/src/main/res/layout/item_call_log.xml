<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/spacing_medium">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_size_medium"
        android:layout_height="@dimen/avatar_size_medium"
        android:src="@drawable/ic_person"
        android:scaleType="center"
        android:background="@color/primary_purple_light"
        android:padding="8dp"
        app:tint="@color/text_primary"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_name"
        android:textSize="@dimen/text_size_body_large"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_call" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_tiny"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_call"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar">

        <ImageView
            android:id="@+id/iv_call_type"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_call_received"
            app:tint="@color/status_online"
            android:contentDescription="@string/call_type" />

        <TextView
            android:id="@+id/tv_call_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_info"
            android:textSize="@dimen/text_size_body"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="@dimen/spacing_small" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_call"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:src="@drawable/ic_phone"
        android:padding="@dimen/spacing_small"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/secondary_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/call" />

</androidx.constraintlayout.widget.ConstraintLayout>