<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_to_login" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/otp_verification"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/otp_subtitle"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <LinearLayout
        android:id="@+id/llOtpInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="@font/inter_bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="@font/inter_bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="@font/inter_bold"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/selector_otp_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="@font/inter_bold"
            android:importantForAutofill="no" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        style="@style/Widget.EZTalk.Button"
        android:layout_width="364dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:text="@string/verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llOtpInputs" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVerify">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/didnt_receive_code"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/resend"
            android:textColor="@color/primary_purple"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"
            android:padding="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>