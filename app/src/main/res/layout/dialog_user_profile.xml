<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_margin="12dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@color/text_secondary"
            tools:ignore="ContentDescription" />

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/primary_purple"
            app:strokeWidth="3dp">

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <!-- Online Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/viewOnlineStatus"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_purple_light"
                android:backgroundTint="@color/status_online" />

            <TextView
                android:id="@+id/tvOnlineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/online"
                android:textColor="@color/status_online"
                android:textSize="12sp"
                android:fontFamily="@font/inter_medium" />

        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="John Doe"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            tools:ignore="HardcodedText" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="\@johndoe"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            tools:ignore="HardcodedText" />

        <!-- Bio/Status -->
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:text="Hey there! I'm using EZ Talk"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            tools:ignore="DisableBaselineAlignment">

            <!-- Message Button -->
            <LinearLayout
                android:id="@+id/layoutMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat"
                    android:background="@drawable/circle_purple_light"
                    android:backgroundTint="@color/primary_purple_light"
                    android:padding="10dp"
                    app:tint="@color/primary_purple"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Message"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Voice Call Button -->
            <LinearLayout
                android:id="@+id/layoutVoiceCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_phone"
                    android:background="@drawable/circle_purple_light"
                    android:backgroundTint="@color/secondary_green_light"
                    android:padding="10dp"
                    app:tint="@color/secondary_green"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Call"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Video Call Button -->
            <LinearLayout
                android:id="@+id/layoutVideoCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_video"
                    android:background="@drawable/circle_purple_light"
                    android:backgroundTint="@color/accent_blue"
                    android:padding="10dp"
                    app:tint="@android:color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Video"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>