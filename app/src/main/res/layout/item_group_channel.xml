<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Group/Channel Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_group"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.EZTalk.MediumComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/profile" />

    <!-- Group/Channel Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Group/Channel Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Name"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Last message here..."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <!-- Member Count (for groups) -->
        <TextView
            android:id="@+id/tvMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="5 members"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:30 PM"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <!-- Unread Badge (optional) -->
    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:background="@drawable/bg_unread_badge"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        android:layout_marginTop="4dp"
        tools:visibility="visible"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>