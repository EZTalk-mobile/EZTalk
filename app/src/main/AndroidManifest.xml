<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Camera & Audio Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Storage Permissions for Android 12 and below -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />

    <!-- Media Permissions for Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Visual Media Picker for Android 14+ (API 34+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <!-- Location Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Other Permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Hardware Features (optional) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    <uses-feature android:name="android.hardware.location" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EZTalk"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:extractNativeLibs="true"
        tools:targetApi="34">


    <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Splash Activity -->
        <activity
            android:name=".ui.auth.Splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EZTalk.Splash"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <!-- Onboarding Activity -->
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Welcome Activity -->
        <activity
            android:name=".ui.auth.welcome.WelcomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Login Activity -->
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.auth.signup.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- OTP Verification Activity -->
        <activity
            android:name=".ui.auth.otp.OtpVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.auth.forgot.ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Reset Password Activity -->
        <activity
            android:name=".ui.auth.reset.ResetPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Search Activity -->
        <activity
            android:name=".ui.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Home Activity -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            tools:ignore="Instantiatable" />

        <!-- Chat Detail Activity -->
        <activity
            android:name=".ui.chat.detail.ChatDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Group Chat Activity -->
        <activity
            android:name=".ui.chat.group.GroupChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="Instantiatable" />

        <!-- Create Group Activity -->
        <activity
            android:name=".ui.chat.group.CreateGroupActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" />

        <!-- Group Details Activity -->
        <activity
            android:name=".ui.chat.group.GroupDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.chat.group.GroupChatActivity" />

        <!-- Group List Activity -->
        <activity
            android:name=".ui.chat.group.Grouplistactivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.profile.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.home.HomeActivity"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- ========== CALL ACTIVITIES (LEGACY) ========== -->

        <!-- Incoming Call Activity (Legacy) -->
        <activity
            android:name=".ui.call.incoming.IncomingCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.EZTalk.Transparent"
            android:launchMode="singleInstance"
            android:attributionTags="call_handling" />

        <!-- Call Activity (Legacy Voice Call) -->
        <activity
            android:name=".ui.call.ongoing.CallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:attributionTags="call_handling" />

        <!-- Video Call Activity (Legacy) -->
        <activity
            android:name=".ui.call.video.VideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:attributionTags="call_handling" />

        <!-- ========== INTEGRATED VIDEO CALL ACTIVITIES (NEW) ========== -->

        <!-- Integrated Incoming Call Activity -->
        <activity
            android:name=".ui.call.incoming.IntegratedIncomingCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.EZTalk.Transparent"
            android:launchMode="singleInstance"
            android:excludeFromRecents="false"
            android:attributionTags="call_handling" />

        <!-- Voice Call Activity -->
        <activity
            android:name=".ui.call.voice.VoiceCallActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:attributionTags="call_handling"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" />

        <!-- Integrated Video Call Activity -->
        <activity
            android:name=".ui.call.video.IntegratedVideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:excludeFromRecents="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:attributionTags="call_handling" />

        <!-- ========== MEDIA ACTIVITIES ========== -->

        <!-- Image Viewer Activity -->
        <activity
            android:name=".ui.media.ImageViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.EZTalk.Transparent" />

        <!-- Video Player Activity -->
        <activity
            android:name=".ui.media.VideoPlayerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.EZTalk.Transparent"
            tools:ignore="DiscouragedApi,Instantiatable" />

        <!-- ========== CHANNEL ACTIVITIES ========== -->

        <!-- Channel Activities -->
        <activity
            android:name=".ui.channel.CreateChannelActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.channel.ChannelListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.channel.ChannelDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ========== SERVICES ========== -->

        <!-- FCM Service -->
        <service
            android:name=".service.FCMService"
            android:exported="false"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Call Service -->
        <service
            android:name=".service.CallService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="phoneCall"
            tools:ignore="ForegroundServicePermission,Instantiatable" />

        <!-- Message Service -->
        <service
            android:name=".service.MessageService"
            android:enabled="true"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <!-- ========== FIREBASE METADATA ========== -->

        <!-- Firebase Messaging Default Values -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary_purple" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <service
            android:name="com.example.project_ez_talk.service.IncomingCallListenerService"
            android:enabled="true"
            android:exported="false" />

        <!-- File Provider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>